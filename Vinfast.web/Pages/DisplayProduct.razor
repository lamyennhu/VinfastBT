@inherits DisplayProductBase

<div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
    <div class="card-header">
        <input type="checkbox" checked="@IsSelected" @onchange="CheckBoxChanged" />
        <h3>@Product.Name</h3>
        <h4>Price: @Product.Price</h4>
    </div>
    <a href="@($"productdetails/{Product.ProductId}")"> <img class="card-img-top imageThumbnail" src="@Product.PhotoPath" /></a>
   
    @if (ShowFooter)
    {
        <div class="card-footer text-center">
            <a href="@($"productdetails/{Product.ProductId}")"
               class="btn btn-primary m-1">View</a>

            <a href="#" class="btn btn-primary m-1">Edit</a>

            <a href="#" class="btn btn-danger m-1">Delete</a>
        </div>
    }
</div>
    